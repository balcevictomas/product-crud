{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
{% endblock %}

<div>
    <div class="border max-w-lg mx-auto mt-20 flex flex-col">
        <div class="flex justify-center">
            <p>Products</p>
        </div>
        <div>
            <div class="flex flex-col">
                {% if products %}
                    {% for product in products %}
                        <div class="flex flex-row">
                            <div class="w-1/3 justify-center flex">{{ product.title }}</div>
                            <div class="w-1/3 justify-center flex">{{ product.description }}</div>
                            <div class="w-1/3 justify-center flex">{{ product.priceEur }}</div>
                            <div class="flex gap-x-3">
                                <a href="product/edit/{{ product.id }}">Edit</a>
                                <a href="product/delete/{{ product.id }}">Delete</a>
                        </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div>No products</div>
                {% endif %}
                <div class="flex justify-center">
                    <a href="product/add/">Add</a>
                </div>
            </div>
        </div>
    </div>
</div>